<div class="custom-links-component">
  <h2>{{ heading }}</h2>
  <ul>
    {% for link in links %}
      <li>
        {% if link.icon %}
          <img src="{{ link.icon | image_url: width: 40 }}" alt="icon">
        {% endif %}
        <a href="{{ link.url }}">{{ link.text }}</a>
      </li>
    {% endfor %}
  </ul>
</div>

<style>
  .custom-links-component {
    background-color: #00274e;
    padding: 20px;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: flex-start;
  }

  .custom-links-component h2 {
    color: white;
    width: 100%;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .custom-links-component ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .custom-links-component li {
    background-color: transparent;
    color: white;
    padding: 10px 15px;
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .custom-links-component img {
    width: 2.5rem;
    height: 2.5rem;
  }

  .custom-links-component a {
    color: white;
    text-decoration: none;
    font-weight: bold;
  }
</style>
