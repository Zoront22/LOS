{% schema %}
{
  "name": "Links with Icons",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Component Title",
      "default": "Quick Links"
    }
  ],
  "blocks": [
    {
      "type": "link_item",
      "name": "Link Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Optional Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Links with Icons",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
  .custom-links-component {
    padding: 20px;
  }
  .custom-links-component h2 {
    color: #333;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  .custom-links-component ul {
    list-style: none;
    padding: 0;
  }
  .custom-links-component li {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
  }
  .custom-links-component img {
    width: 20px;
    height: 20px;
    margin-right: 8px;
  }
{% endstyle %}

<div class="custom-links-component">
  <h2>{{ section.settings.heading }}</h2>
  <ul>
    {% for block in section.blocks %}
      <li>
        {% if block.settings.icon %}
          <img src="{{ block.settings.icon | image_url: width: 40 }}" alt="icon">
        {% endif %}
        <a href="{{ block.settings.url }}">{{ block.settings.text }}</a>
      </li>
    {% endfor %}
  </ul>
</div>
