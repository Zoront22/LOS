{%- liquid
  capture desktop_image_sizes
    if section.settings.width == 'full-width'
      echo 'calc((100vw - (2 * 20px)) * 0.[[diw]])' | replace: '[[diw]]', section.settings.desktop_media_width
    else
      echo 'calc((1600px - (2 * 20px)) * 0.[[diw]])' | replace: '[[diw]]', section.settings.desktop_media_width
    endif
  endcapture

  assign mobile_image_sizes = 'calc(100vw - (2 * 20px))'

  if section.settings.image != blank and section.settings.mobile_image == blank
    capture universal_image_sizes
      echo '(min-width: 720px) ' | append: desktop_image_sizes | append: ', '
      echo mobile_image_sizes
    endcapture

    assign desktop_image_sizes = universal_image_sizes
  endif
-%}

{% capture images %}
  {%- render 'image',
    image: section.settings.image,
    aspect_ratio: section.settings.aspect_ratio,
    class: "media-with-text__media-image media-with-text__media-image--desktop",
    focal_point: 'image-presentation',
    include_placeholder: true,
    placeholder_name: 'detailed-apparel-1',
    placeholder_natural_fallback_ratio: 'square',
    sizes: desktop_image_sizes,
    load_animation_effect: 'blur'
  -%}

  {%- if section.settings.mobile_image != blank -%}
    {%- render 'image',
      image: section.settings.mobile_image,
      aspect_ratio: section.settings.mobile_aspect_ratio,
      class: "media-with-text__media-image media-with-text__media-image--mobile",
      focal_point: 'image-presentation',
      include_placeholder: false,
      placeholder_natural_fallback_ratio: 'square',
      sizes: mobile_image_sizes,
      load_animation_effect: 'blur'
    -%}
  {%- endif -%}
{%- endcapture -%}

{%- capture media_portion -%}
  <div class="media-with-text__media-wrapper">
    <div class="media-with-text__media">
      {%- liquid
        if section.settings.media_link != blank
          echo images | link_to: section.settings.media_link
        else
          echo images
        endif
      -%}
    </div>
    <div class="product-display">
      <visibility-watcher>
        {%- if section.settings.product != blank -%}
          {%- render 'product-card-2', product: section.settings.product -%}
        {%- endif -%}
      </visibility-watcher>
    </div>
  </div>
{%- endcapture -%}

